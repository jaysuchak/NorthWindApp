<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<l:Grid defaultSpan="L12 M12 S12" >
		<l:content>
			<f:Form id="idSupplierChange" minWidth="1024"
				maxContainerCols="2" editable="true">
				<f:title>
					<core:Title text="Address" />
				</f:title>
				<f:layout>
					<f:ResponsiveGridLayout labelSpanL="3"
						labelSpanM="3" emptySpanL="4" emptySpanM="4" columnsL="1"
						columnsM="1" />
				</f:layout>
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="Supplier ID">
								<f:fields>
									<Input value="{/SupplierID}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Company Name">
								<f:fields>
									<Input value="{/CompanyName}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Contact Name">
								<f:fields>
									<Input value="{/ContactName}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Contact Title">
								<f:fields>
									<Input value="{/ContactTitle}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Address">
								<f:fields>
									<Input value="{/Address}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="City">
								<f:fields>
									<Input value="{/City}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Region">
								<f:fields>
									<Input value="{/Region}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Postal Code">
								<f:fields>
									<Input value="{/PostalCode}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Country">
								<f:fields>
									<Input value="{/Country}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Phone">
								<f:fields>
									<Input value="{/Phone}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="Fax">
								<f:fields>
									<Input value="{/Fax}"/>
								</f:fields>
							</f:FormElement>
							<f:FormElement label="HomePage">
								<f:fields>
									<Input value="{/HomePage}"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
		</l:content>
	</l:Grid>
</core:FragmentDefinition>